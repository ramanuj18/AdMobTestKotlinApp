<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btnWatchVideo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Watch Rewarded Video"
            android:enabled="false"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="36dp"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/test_banner_unit_id"
            android:layout_marginEnd="8dp"
            ads:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            ads:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            ads:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintVertical_bias="0.982"/>
    <Button
            android:id="@+id/btnIntertitialad"
            android:text="show Interstitial Ad"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWatchVideo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Native ad"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textAllCaps="false"
            android:id="@+id/btnNativeAd" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIntertitialad" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="Native Ads"
            android:layout_width="200dp"
            android:textAllCaps="false"
            android:layout_height="60dp"
            android:id="@+id/btnNativeAds" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNativeAd" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>