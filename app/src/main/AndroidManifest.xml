<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.admobtestkotlinapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="@string/sample_ad_mob_app_id"/>

        <activity
                android:name=".TestAdActivity"
                android:label="Interstitial Ad">
        </activity>
        <activity
                android:name=".NativeAdActivity"
                android:label="Native Ad">
        </activity>
        <activity android:name=".nativead.ActivityNativeAds">
        </activity>
    </application>

</manifest>